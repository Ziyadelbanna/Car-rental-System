<%= form_for([@car,@review]) do |form| %>

  <div class="review-area">
    <h3>Be the first to review “<%= @car.model %>”</h3>
    <div class="review-form">
      <div name="rank" id="star-rating" class="review-star">
      </div>

      <%= form.text_area(:content, size: '100x10',placeholder:'Write Your Feedback Here!') %>
    </div>
  </div>
  <div class="actions">
    <%= form.submit%>
  </div>


<% end %>


<script>
    $('#star-rating').raty({
        path: '/assets/',
        hints: ['bad', 'poor', 'regular', 'good', 'gorgeous'],
        scoreName: 'review[rank]'
    });
</script>
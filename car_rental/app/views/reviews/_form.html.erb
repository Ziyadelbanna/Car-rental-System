<%= form_for([ @car,@review]) do |form| %>


  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id %>
  </div>

  <div class="field">
    <%= form.label :car_id %>
    <%= form.text_field :car_id %>
  </div>

  <div class="field">
    <%= form.label :rank %>
    <div id="star-rating">
    </div>
  </div>

  <div class="field">
    <%= form.label :content%>
    <%= form.text_area :content %>
  </div>

  <div class="actions">
      <%= form.submit%>
  </div>
<% end %>


